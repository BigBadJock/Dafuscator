<Application x:Class="DafuscatorWpf.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Themes\generic.xaml"/>
			</ResourceDictionary.MergedDictionaries>

            <XmlDataProvider x:Key="aboutProvider" XPath="ApplicationInfo">
                <x:XData>
                    <ApplicationInfo xmlns="">
                        <Title>Dafuscator</Title>
                        <Product>Sample WPF AboutBox</Product>
                        <Company>Microsoft Samples</Company>
                        <Copyright>Copyright © 2009 - Pedro Silva</Copyright>
                        <Description>blah, blah, blah
                        </Description>
                        <Version>1.0.0.0</Version>
                        <Link Uri="http://www.dafuscator.com">More Info</Link>
                    </ApplicationInfo>
                </x:XData>
            </XmlDataProvider>
        </ResourceDictionary>
    </Application.Resources>
</Application>
